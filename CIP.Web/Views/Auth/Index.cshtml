
@{ Layout = null; }

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <!-- BOOTSTRAP STYLES-->
    <link href="@Url.Content("~/Content/Template/css/bootstrap.css")" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="@Url.Content("~/Content/Template/css/font-awesome.css")" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="@Url.Content("~/Content/Template/css/custom.css")" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
</head>
<body>
    
    <br />
    <div class="container">
        <div class="row text-center">
            <img src="@Url.Content("~/Content/Template/img/logocip.png")" class="user-image img-responsive" />
            <br><br>
            <h2>Colegio de Ingenieros del Peru: Login</h2>

            <h5>( Ingrese para utilizar nuestros servicios )</h5>
            <br>
        </div>

        <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong> Ingrese Credenciales </strong>
                    </div>
                    <div class="panel-body">
                        <br>

                        @using (Html.BeginForm("Index", "Auth"))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group input-group">
                                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                @Html.TextBox("username", "", new { @class = "form-control", @placeholder = "Usuario" })
                            </div>

                            <div class="form-group input-group">
                                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                @Html.Password("password", "", new { @class = "form-control", @placeholder = "Contraseña" })
                            </div>
                            <br>
                            <button type="submit" class="btn btn-default pull-right"><i class="fa fa-check"></i> Iniciar Sesión</button>
                        }

                        <hr>

                        @if (ViewBag.MensajeLogin != null)
                        {
                            <div class="alert alert-warning">
                                @ViewBag.MensajeLogin
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- JQUERY SCRIPTS -->
    <script src="@Url.Content("~/Content/Template/js/jquery-1.10.2.js")"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="@Url.Content("~/Content/Template/js/bootstrap.min.js")"></script>
    <!-- METISMENU SCRIPTS -->
    <script src="@Url.Content("~/Content/Template/js/jquery.metisMenu.js")"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="@Url.Content("~/Content/Template/js/custom.js")"></script>
</body>
</html>



